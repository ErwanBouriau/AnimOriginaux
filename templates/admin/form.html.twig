{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/forms.css') }}" rel="stylesheet"/>
{% endblock %}

{% block title %}Anim'Originaux - Mon compte{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
        <div class="form-account">
            {{ form_row(form.name) }}
            {{ form_row(form.weight) }}
            {{ form_row(form.height) }}
            {{ form_row(form.food) }}
            {{ form_row(form.price) }}
            {{ form_row(form.save) }}
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}
