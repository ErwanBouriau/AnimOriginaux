{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/forms.css') }}" rel="stylesheet"/>
{% endblock %}

{% block title %}Anim'Originaux - Mon compte{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
        <div class="form-account">
            {{ form_row(form.login) }}
            {{ form_row(form.password) }}
            <span>({{ app.user.money }} AOpt actuellement)</span>
            {{ form_row(form.money) }}
            {{ form_row(form.save) }}
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}
